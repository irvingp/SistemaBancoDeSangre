@model SistemaBancoDeSangre.Models.ControlDonaciones

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Formulario de Edición</h1>

<h4>Centro de Donaciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="DonanteId" class="control-label"></label>
                <select asp-for="DonanteId" class="form-control" asp-items="ViewBag.DonanteId"></select>
                <span asp-validation-for="DonanteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CentroDonacionId" class="control-label"></label>
                <select asp-for="CentroDonacionId" class="form-control" asp-items="ViewBag.CentroDonacionId"></select>
                <span asp-validation-for="CentroDonacionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDonacion" class="control-label"></label>
                <input asp-for="FechaDonacion" class="form-control" />
                <span asp-validation-for="FechaDonacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista de Centro de Donaciones</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
