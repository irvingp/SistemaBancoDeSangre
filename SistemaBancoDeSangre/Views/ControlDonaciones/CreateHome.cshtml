@model SistemaBancoDeSangre.Models.ControlDonaciones

@{
    ViewData["Title"] = "Create";
}

<h1>Crear nuevo</h1>

<h4>Control de donaciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DonanteId" class="control-label"></label>
                <select asp-for="DonanteId" class ="form-control" asp-items="ViewBag.DonanteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CentroDonacionId" class="control-label"></label>
                <select asp-for="CentroDonacionId" class ="form-control" asp-items="ViewBag.CentroDonacionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaDonacion" class="control-label"></label>
                <input asp-for="FechaDonacion" class="form-control" />
                <span asp-validation-for="FechaDonacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ControlDonaciones" asp-action="Index">Regresar a la lista de Centro de donaciones</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
